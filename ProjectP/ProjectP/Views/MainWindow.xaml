<Window x:Class="ProjectP.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <UserControl Height="400" Width="750" Visibility="Visible">
            <TextBox Name="TextField" TextWrapping="Wrap" Text="{Binding TextAreaContent, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="20"/>
        </UserControl>
    </Grid>
</Window>
